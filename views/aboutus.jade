extends layout

block content
	include components/subnavs
	section#body.container
		.row
			.span7
				ul.nav.unstyled.inline
					li Info
					li Philosophy
					li Beliefs
				div
					p Joyent is the high-performance cloud infrastructure company, offering the only solution specifically built to power real-time web and mobile applications. 
			.span4
				img(src="http://www.joyent.com/content/08-company/header.jpg?v=1372167145")
		.row(style='background: rgb(242, 247, 253);padding: 26px 8px;')
			.span4
				h4
					a(href='/rol/management') Management
				-each person in management
					div.row(style='margin-bottom:25px;')
						div.span1
							img(src='/files/' + person.image, style='width: 75px;border-radius: 50%;')
						div.span3
							h4=person.name
							span=person.position
			.span4
				h4 Affiliates
			.span3
				h4 News
				-for(v in news)
					span=v
				

